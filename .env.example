# MongoDB Environment Variables
# Copy this file to .env and update the values as needed

# MongoDB Root Credentials (for admin access)
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=your_secure_root_password_here

# MongoDB Database
MONGO_DATABASE=minisocial

# Test Database
MONGO_TEST_DATABASE=minisocial_test

# Application Database User (created by init script)
MONGO_APP_USERNAME=minisocial_user
MONGO_APP_PASSWORD=your_secure_app_password_here

# Test Database User (created by init script)
MONGO_TEST_USERNAME=minisocial_test_user
MONGO_TEST_PASSWORD=your_secure_test_password_here

# MongoDB Connection Details
MONGO_HOST=localhost
MONGO_PORT=27017

# Constructed connection strings
# For local development
MONGO_CONNECTION_STRING=mongodb://minisocial_user:your_secure_app_password_here@localhost:27017/minisocial?authSource=minisocial

# For test environment
MONGO_TEST_CONNECTION_STRING=mongodb://minisocial_test_user:your_secure_test_password_here@localhost:27017/minisocial_test?authSource=minisocial_test
